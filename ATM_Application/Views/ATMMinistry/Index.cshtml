    <script>

        $(function () {
            $(window).on('load', function () {


                setTimeout(function () { $(".loading-overlay , .loading-overlay spinner ").fadeOut(1000); }, 1000);
            });

            var msg;
            $.ajax({
                url: "/AtmLogin/GetMessage",
                data: "",
                async: false,
                success: function (res) {

                    msg = res;
                }

            });

            const Toast = Swal.mixin({

                toast: true,

                position: 'top-end',

                showConfirmButton: false,


                timer: 5000

            });
            setTimeout(function () {


                if (msg != "") {


                    Toast.fire({

                        type: 'success',


                        title: msg


                    });






                }
                msg = "";
            }, 1500);


        });
    </script>
