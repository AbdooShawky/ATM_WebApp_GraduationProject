
@{
    ViewBag.Title = "Education";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(function () {


         var seesion;
        $.ajax({
            url: "/AtmLogin/Sessionvalue",
            data: "",
            async: false,
            success: function (res) {

                seesion = res;

            }
        });
        if (seesion == "ar-EG") {
            $(".services").empty();
            $(".services").append("<h1> خدمات <span>   التعليم</span> </h1>");
        }
        else {

             $(".services").empty();
            $(".services").append("<h1> Education <span>   Services</span> </h1>");
        }
    });
</script>
