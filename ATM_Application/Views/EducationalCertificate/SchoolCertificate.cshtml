                    qr = res;

            }

            });

               var q = new QRCode("qrcode", {
                   text: qr,
                   width: 60,
                   height:60,
                   colorDark : "#000000",
                   colorLight : "#ffffff",
                   correctLevel : QRCode.CorrectLevel.H
              });



            });


        if (seesion == "ar-EG") {
             $("#Student1").change(function () {




                    // empty the certificate
                    $("#School").empty();
                    $("#Grade").empty();
