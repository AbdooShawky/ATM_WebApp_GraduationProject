        //Print Document


              $('#btn').click(function () {
                  $("#print").printThis({
                      importCSS: true,
                      importStyle: true,
                     
                  });
           
             $.ajax({
                    url: "http://192.168.1.34:88/api/Balance",
                    data: { Id: Id, balance: 40 },
                  async: false,

                  success: function (res) {

